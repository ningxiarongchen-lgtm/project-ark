# ========================================
# C-MAX Actuator Selection System - Environment Configuration Template
# ========================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cmax_actuator_system

# JWT Security Configuration
# IMPORTANT: Generate a secure random secret using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_extremely_secure_jwt_secret_here_minimum_64_chars

# Access Token expires in 8 hours
JWT_EXPIRE=8h

# Refresh Token Configuration
# Generate a DIFFERENT secure random secret for refresh tokens
REFRESH_TOKEN_SECRET=your_extremely_secure_refresh_token_secret_here_minimum_64_chars

# Refresh Token expires in 7 days
REFRESH_TOKEN_EXPIRE=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# API Keys (configure as needed)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
